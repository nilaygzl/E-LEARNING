@model IEnumerable<Course>

<!-- Courses Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Courses</h6>
            <div class="col-6 text-end">
                <form method="GET" asp-controller="Course" asp-action="Search" class="form-inline">
                    <div class="form-group">
                        <input type="text" name="search" placeholder="Search by Title" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>
                @if ((User.Claims.FirstOrDefault(c => c.Type == "role")?.Value.Equals("Instructor") ?? false) ||
                (User.Claims.FirstOrDefault(c => c.Type == "role")?.Value.Equals("Admin") ?? false))
                {
                    <a asp-controller="Course" asp-action="Upsert" class="btn btn-primary">
                        Create Course
                    </a>
                }
            </div>
        </div>
        <div class="row g-4 justify-content-center">
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                @foreach (Course course in Model)
                {
                    <div class="course-item bg-light">
                        <div class="position-relative overflow-hidden">
                            <img class="img-fluid" src="@course.ImageUrl" alt="">
                            <div class="w-100 d-flex justify-content-center position-absolute bottom-0 start-0 mb-4">
                                <a asp-action="Details" asp-route-courseId="@course.CourseId" class="flex-shrink-0 btn btn-sm btn-primary px-3 border-end" style="border-radius: 30px 0 0 30px;">Goes to details</a>
                                <a href="#" class="flex-shrink-0 btn btn-sm btn-primary px-3" style="border-radius: 0 30px 30px 0;">Silelim</a>
                            </div>
                        </div>
                        <div class="text-center p-4 pb-0">
                            <h3 class="mb-0">COURSE</h3>
                            <div class="mb-3">
                                <small class="fa fa-star text-primary"></small>
                                <small class="fa fa-star text-primary"></small>
                                <small class="fa fa-star text-primary"></small>
                                <small class="fa fa-star text-primary"></small>
                                <small class="fa fa-star text-primary"></small>
                                <small>(123)</small>
                            </div>
                            <h5 class="mb-4">@course.Title</h5>
                        </div>
                        <div class="d-flex border-top">
                            <small class="flex-fill text-center border-end py-2"><i class="fa fa-user-tie text-primary me-2"></i>@course.User.Name</small>
                            @*  <small class="flex-fill text-center border-end py-2"><i class="fa fa-clock text-primary me-2"></i>Kaldiralim</small> *@
                            <small class="flex-fill text-center py-2"><i class="fa fa-user text-primary me-2"></i>@course.EnrollmentCount Students</small>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- Courses End -->
